{
  "name": "manyhands-site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "css": "tailwindcss --input ./src/css/main.css --output ./dist/styles.css",
    "css:watch": "tailwindcss --input ./src/css/main.css --output ./dist/styles.css --watch",
    "html": "cpx src/**/*.html dist",
    "html:watch": "cpx src/**/*.html dist --watch",
    "svg": "cpx src/assets/svg/*.svg dist",
    "svg:watch": "cpx src/assets/svg/*.svg dist --watch",
    "sync": "browser-sync start --server dist --files dist",
    "build": "npm-run-all css html",
    "dev": "npm-run-all --parallel sync css:watch html:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wearelighthouse/ManyHands-site.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wearelighthouse/ManyHands-site/issues"
  },
  "homepage": "https://wearelighthouse.github.io/ManyHands-site/",
  "devDependencies": {
    "browser-sync": "^2.27.9",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.24"
  }
}
